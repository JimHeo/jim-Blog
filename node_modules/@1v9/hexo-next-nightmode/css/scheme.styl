.darkScheme body {
  background: $black-deep;
  color: $grey-light;
}

.darkScheme .exturl {
  color: $gainsboro;
  &:hover {
    color: $link-hover-color-dark;
    background: $black-light
  }
}

.darkScheme a {
  color: $gainsboro;
  &:hover {
    color: $link-hover-color-dark;
    border-bottom-color: $link-hover-color-dark;
  }
}

.darkScheme .footer {
	background: $black-deep;
  color: $grey-dark;
}

.darkScheme .site-author-name {
  color: $gainsboro
}

for $tag-cloud in (0 .. 10){
    $tag-cloud-color = mix(#eee, #555, $tag-cloud * 10);
    .darkScheme .tag-cloud-{$tag-cloud} {
      border-bottom-color: $tag-cloud-color;
      color: $tag-cloud-color;
    }
}

.darkScheme .tag-cloud {
  color: $grey-dark
}

.darkScheme .header .header-inner {
  background: $black-dim;
}

.darkScheme .post-block {
  background: $black-dim;
}

.darkScheme .sidebar {
	background: $black-dim;
}

.darkScheme .sidebar-inner {
  background: $black-dim;
}

.darkScheme .post-expand {
	color: $grey-dark;
}

.darkScheme .site-title {
	//background: #FAFAFA;
	color: $whitesmoke;
}

.darkScheme .note.info {
	background: $gainsboro;
  p {
    color: black;
  }
}

.darkScheme .post-block {
	color: $gainsboro;
}

.darkScheme .post-title-link {
	color: $gainsboro;
}

.darkScheme .copy-btn {
	background: rgb(32, 33, 36);
  color: $gainsboro;
}

.darkScheme .post-copyright {
	background-color: $black-light;
}

.darkScheme .menu .menu-item a {
	color: $gainsboro;
}

.darkScheme .pagination {
  background: $black-dim;
}
.darkScheme .page-number.current {
  background: $green;
  border-top-color: $green;
  color: $gainsboro;
}

.darkScheme .menu-item-active a, .darkScheme .menu .menu-item a:hover, .darkScheme .menu .menu-item span.exturl:hover {
  background: $black-light;
  color: $green;
}

.darkScheme blockquote {
  color: $sage-green 
}

.darkScheme .btn {
  background: $green;
  color: $gainsboro;
  &:hover {
    background: $black-dim;
    color: $green;
  }  
}